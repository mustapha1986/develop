{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
 {{  form_start(form) }}

    {{ form_row(form.username, { 'attr' : { 'class' : 'form_control' }}) }}
    {{ form_row(form.email, { 'attr' : { 'class' : 'form_control'  }}) }}
    {{ form_row(form.password.first, { 'attr' : { 'class' : 'form_control'  }}) }}
    {{ form_row(form.password.second, { 'attr' : {'class' : 'form_control'  }}) }}

        <button type="submit" class="btn btn-primary">
                <i class="fa fa-btn fa-user"></i> Register
        </button>

 {{  form_end(form) }}
</div>
{% endblock %}
