{% extends 'base.html.twig' %}

{% block title %}Company index
{% endblock %}

{% block body %}
	<exemple></exemple>
	<h1>Company index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Adress</th>
				<th>Email</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for company in companies %}
				<tr>
					<td>{{ company.id }}</td>
					<td>{{ company.name }}</td>
					<td>{{ company.adress.city }}</td>
					<td>{{ company.email }}</td>
					<td>
						<a href="{{ path('app_company_show', {'id': company.id}) }}">show</a>
						<a href="{{ path('app_company_edit', {'id': company.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_company_new') }}">Create new</a>
{% endblock %}
